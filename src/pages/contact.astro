---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact Me | Joan Bayega">
  <div class="page-banner">
    <h1>Contact <span>Me</span></h1>
  </div>

  <section class="contact-section">
    <div class="container">
      <span class="section-label">Reach ME</span>
      <p class="contact-intro">I'd love to hear from you, get in touch!</p>

      <form class="contact-form" id="contactForm" action="https://formspree.io/f/xreazabb" method="POST">
        <div class="form-row">
          <div class="form-group">
            <label for="firstName">Name <span class="required">*</span></label>
            <input type="text" id="firstName" name="firstName" placeholder="First" required />
          </div>
          <div class="form-group">
            <label for="lastName">&nbsp;</label>
            <input type="text" id="lastName" name="lastName" placeholder="Last" />
          </div>
        </div>

        <div class="form-group">
          <label for="email">Email <span class="required">*</span></label>
          <input type="email" id="email" name="email" required />
        </div>

        <div class="form-group">
          <label for="message">Comment or Message</label>
          <textarea id="message" name="message" rows="6"></textarea>
        </div>

        <button type="submit" class="btn btn-filled">Submit</button>
      </form>
    </div>
  </section>
</BaseLayout>

<style>
  .contact-section {
    padding: var(--section-padding) 0;
  }

  .contact-intro {
    margin-bottom: 40px;
    font-size: 0.9375rem;
  }

  .contact-form {
    max-width: 550px;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
  }

  .form-group {
    margin-bottom: 25px;
  }

  .form-group label {
    display: block;
    font-family: var(--font-accent);
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-heading);
    margin-bottom: 8px;
  }

  .required {
    color: var(--color-primary);
  }

  .form-group input,
  .form-group textarea {
    width: 100%;
    padding: 12px 15px;
    font-family: var(--font-body);
    font-size: 0.9375rem;
    border: 1px solid var(--color-border);
    border-radius: 4px;
    background-color: var(--color-background);
    transition: border-color var(--transition-fast);
  }

  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-primary);
  }

  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  @media (max-width: 600px) {
    .form-row {
      grid-template-columns: 1fr;
    }

    .form-group:nth-child(2) label {
      display: block;
    }
  }
</style>
